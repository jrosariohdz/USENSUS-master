<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/fondo">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/scrollView">

    <RelativeLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:gravity="top">


    </RelativeLayout>
    </ScrollView>

    <EditText
android:layout_width="300dp"
android:layout_height="48dp"
android:id="@+id/etUserLogin"
android:hint="Nombre de usuario"
android:textAlignment="center"
android:layout_weight="1"
android:padding="10dp"
android:ems="10"
        android:drawableLeft="@drawable/profilec"
android:layout_gravity="center_vertical"
    android:layout_above="@+id/etPassLogin"
    android:layout_centerHorizontal="true"
        android:layout_marginLeft="40dp"
        android:layout_marginRight="40dp"
        android:layout_marginTop="4dp"
        android:maxLines="1"
        android:inputType="textPersonName"
        android:background="#ffffff" />

    <EditText
    android:layout_width="match_parent"
    android:layout_height="48dp"
    android:inputType="textPassword"
    android:hint="Password"
    android:textAlignment="center"
    android:textSize="17dp"

    android:padding="10dp"
    android:ems="10"
    android:id="@+id/etPassLogin"
    android:layout_centerVertical="true"
    android:layout_centerHorizontal="true"
        android:layout_gravity="center_horizontal"
        android:layout_marginLeft="40dp"
        android:layout_marginRight="40dp"
        android:layout_marginTop="2dp"
        android:background="#ffffff" />

    <Button
        android:layout_width="match_parent"
        android:layout_height="48dp"
        android:text="Iniciar"

        android:id="@+id/btnLogin"
        android:onClick="onButtonClick"

        android:layout_gravity="center_horizontal"
        android:layout_below="@+id/etPassLogin"
        android:foreground="#ff5500"
        android:foregroundGravity="fill_vertical"
        android:focusable="false"
        android:focusableInTouchMode="true"
        android:clickable="true"
        android:textStyle="bold"
        android:layout_alignStart="@+id/etUserLogin"
        android:layout_alignEnd="@+id/etPassLogin"
        android:background="#0088ff"
        android:textColor="#FFF" />

    <ProgressBar
android:id="@+id/pbHeaderProgress"
android:layout_width="match_parent"
android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:textAlignment="center"
        android:layout_marginLeft="150dp"
        android:layout_marginRight="150dp"
        android:visibility="visible"
        android:layout_marginTop="64dp"
        android:layout_below="@+id/btnLogin"
        android:layout_centerHorizontal="true">
</ProgressBar>

    <!--<ImageView-->
    <!--android:layout_width="wrap_content"-->
    <!--android:layout_height="wrap_content"-->
    <!--android:id="@+id/imageView2"-->
    <!--android:background="@drawable/logo_login4"-->
    <!--android:layout_marginLeft="8dp"-->
    <!--android:layout_marginRight="8dp"-->
        <!--android:layout_above="@+id/etUserLogin"-->
        <!--android:layout_centerHorizontal="true" />-->

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="90dp"
        android:id="@+id/imageView2"
        android:layout_marginBottom="31dp"
        android:layout_above="@+id/etUserLogin"
        android:layout_alignParentStart="true"
        android:layout_marginTop="20dp" />

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/imageView3"
        android:layout_alignTop="@+id/imageView2"
        android:src="@drawable/usensus"
        android:layout_alignStart="@+id/etUserLogin"
        android:layout_above="@+id/etUserLogin"
        android:layout_alignEnd="@+id/etPassLogin" />


</RelativeLayout>
